{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "parallel": {
      "dependsOn": ["^parallel"]
    },
    "lint": {
      "dependsOn": ["^parallel", "^build"]
    },
    "check-ts": {
      "dependsOn": ["^parallel"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "test": {
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "@monkeytype/frontend#validate-json": {
      "dependsOn": ["^parallel"]
    }
  }
}
